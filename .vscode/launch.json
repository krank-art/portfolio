{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run HTML build",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\bin\\cli.js",
            "args": [
                "build:html"
            ],
            "runtimeArgs": [
                "--experimental-vm-modules"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run art build",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\bin\\cli.js",
            "args": [
                "build:art"
            ],
            "runtimeArgs": [
                "--experimental-vm-modules"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run art import",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/bin/cli.js",
            "args": [
                "import:art"
            ],
            "runtimeArgs": [
                "--experimental-vm-modules"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run art sorting",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\bin\\cli.js",
            "args": [
                "sort:art",
                "date"
            ],
            "runtimeArgs": [
                "--experimental-vm-modules"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run nsfw build",
            "skipFiles": [
                "<node_internals>/**"
            ],
            // Not sure if the '/' will cause problems, but VS Code supposedly already allows '/' instead of '\\' on Windows
            "program": "${workspaceFolder}/bin/cli.js",
            "args": [
                "build:nsfw"
            ],
            "runtimeArgs": [
                "--experimental-vm-modules"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run TemplateLoader",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\lib\\template-loader.js",
            "runtimeArgs": [
                "--experimental-vm-modules"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Piechart",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\lib\\piechart2.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test Comment Encoding",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\test\\comment-history-encoding-test.js"
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003, // Default for Xdebug 3.x
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}/www/php",
            }
        }
    ]
}